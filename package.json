{
  "name": "react-use-snap-slider",
  "version": "0.1.2",
  "description": "A headless React hook that allows you to control a CSS `scroll-snap` slider.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts",
    "prepublish": "tsup src/index.ts",
    "dev": "run-p dev:*",
    "dev:lib": "tsup src/index.ts --watch",
    "dev:website": "pnpm --filter=website run dev"
  },
  "files": [
    "dist"
  ],
  "author": "Daniel Schmidt",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/thebuilder/react-use-snap-slider.git"
  },
  "keywords": [
    "react",
    "react-hook",
    "scroll-snap",
    "headless",
    "slider",
    "carousel",
    "use-scroll-snap",
    "use-snap-slider",
    "react-scroll-snap-slider"
  ],
  "license": "MIT",
  "dependencies": {
    "react-intersection-observer": "^9.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "react": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
